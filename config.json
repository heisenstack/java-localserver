{
  "host": "127.0.0.1",
  "ports": [8080, 8081],

  "client_max_body_size": 10485760,

  "error_pages": {
    "404": "error_pages/404.html",
    "500": "error_pages/500.html"
  },

  "routes": [
    {
      "path": "/uploads",
      "root": "uploads",
      "methods": ["GET", "DELETE"],
      "directory_listing": true,
      "index": "index.html"
    },
    {
      "path": "/",
      "root": "www",
      "methods": ["GET", "POST"],
      "directory_listing": false,
      "index": "index.html"
    }
  ]
}